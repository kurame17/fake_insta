<div class="container">
<%= form_tag("/posts", method: "post", multipart: true) do %>
  <div class="form-group">
    <%= label_tag(:post_title, "제목")%>
    <%= text_field_tag "post[title]", "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag(:post_content, "내용")%>
    <%= text_area_tag("post[content]", "", class: "form-control") %>
  </div>
  <div class="form-group">
    <%= label_tag(:post_postimage, "첨부파일")%>
    <%= file_field_tag("post[postimage]", class: "form-control") %><br />
  </div>
    <%= button_tag("제출", class: "btn btn-primary") %>
  </div>
<% end %>
</div>
